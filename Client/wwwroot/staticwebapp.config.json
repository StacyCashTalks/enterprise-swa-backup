{
    "platform": {
        "apiRuntime": "dotnet-isolated:8.0"
      },
    "routes": [
      {
        "route": "api/todos",
        "methods": [
          "POST",
          "PUT",
          "DELETE"
        ],
        "allowedRoles": [
          "authorised"
        ]
      }
    ],
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": [ "/images/*.{png,jpg,gif}", "/css/*" ]
    }
  }